@model IEnumerable<ERP_BANK.Domain.Entities.broker>


        <script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

        @{
        ViewBag.Title = "Index";
        }



        @using (Html.BeginForm())
        {

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" name="search" id="search" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit" value="search">Go!</button>
                    </span>
                </div>
            </div>
        </div>
        }

        <div class="x_title">
            <h1>Brokers available</h1>
            <div id="refresh">
                <img src="~/fonts/refresh.gif" style="display:none" />
            </div>

        </div>
        <div id="tab" class="x_content">

            <table id="tableauBroker" class="table table-striped responsive-utilities jambo_table">
                <thead>
                    <tr class="headings">
                        <th>
                            @Html.DisplayNameFor(model => model.title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.defaultCurrency)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.minDeposit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.bonus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.spred)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.payment)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.defaultCurrency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.minDeposit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bonus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.spred)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.payment)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Broker" ,new { id=item.idbroker })" class="btn btn-warning btn-xs">
                                <i class="glyphicon glyphicon-edit"></i>
                                Edit
                            </a>
                            <a href="@Url.Action("Delete", "Broker" ,new { id=item.idbroker })" class="btn btn-warning btn-xs" onclick="return confirm('Are you sure you want to delete this broker?');">
                                <i class="glyphicon glyphicon-trash"></i>
                                Delete
                            </a>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

        <span>
            <a href="@Url.Action("Create", "Broker" )" class="btn btn-success btn-sm" style="font-size:medium; margin-left:40%">
                Add a new broker here
            </a>
        </span>
