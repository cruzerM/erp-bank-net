@model IEnumerable<ERP_BANK.Domain.Entities.direction>

@{
    ViewBag.Title = "Index";
}


<style>
    table {
        height: 400px;
        overflow-y: scroll;
        display: block;
    }
</style>


<span>
    <a href="@Url.Action("Create", "Direction")" class="btn btn-primary">
        <i class="fa fa-folder"></i>
        Create New

    </a>
    </span>

    @if (Model != null)

    {  <div class="x_title">
        <h1>List Directions</h1>
    </div>
    <div class="x_content">

        <table class="table table-striped responsive-utilities jambo_table">
            <thead>


                <tr class="headings">
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Budget
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.idDirection)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DirectionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DirectionType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DirectionBudget) $
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Direction",new { id = item.idDirection })" class="btn btn-success btn-xs">
                                <i class="glyphicon glyphicon-edit"></i>
                                Edit
                            </a>
                            <a href="@Url.Action("AllInvoice", "Direction",new { id = item.idDirection })" class="btn btn-primary btn-xs">
                                <i class="glyphicon glyphicon-adjust"></i>
                                View Invoices
                            </a>

                            <a href="@Url.Action("InvIn", "Direction",new { id = item.idDirection })" class="btn btn-primary btn-xs">
                                <i class="glyphicon glyphicon-adjust"></i>
                                View List Invoices In
                            </a>
                            <a href="@Url.Action("InvOut", "Direction",new { id = item.idDirection })" class="btn btn-primary btn-xs">
                                <i class="glyphicon glyphicon-adjust"></i>
                                View List Invoices Out
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    }
    @if (Model == null)
    {
        <hr />
        <h2>No Directions are available</h2>
    }
   
