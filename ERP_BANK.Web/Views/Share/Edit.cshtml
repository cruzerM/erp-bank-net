                    @Html.EditorFor(model => model.idBroker, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.idBroker, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group" style="color:darkorange; padding-left:50%">
            <div class="col-md-offset-2 col-md-10">
                <input style="font-size:large " type="submit" value="Save" class="btn btn-sm btn-primary" /> <i class="fa fa-floppy-o" style="font-size:x-large"></i>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
        $(function () {
            $('#dateOfPurchase').datepicker();
        }); </script>
<script type="text/javascript">
        $(function () {
            $('#dateOfSale').datepicker();
        }); </script>

<div>
    <a href="@Url.Action("Index", "Share")" class="btn btn-danger btn-xs">
        <i class="fa fa-arrow-circle-left"></i>
        Back to List
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
