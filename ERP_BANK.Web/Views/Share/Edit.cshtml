        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <br />
        <br />
        <div style="padding-left:10%">

            <div class="form-group" name="currency1">
                @Html.LabelFor(model => model.currency1, htmlAttributes: new { @class = "control-label col-md-2" })
