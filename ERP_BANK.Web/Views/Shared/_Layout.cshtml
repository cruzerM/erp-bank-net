<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/cssTheme")
    @Scripts.Render("~/bundles/jsTheme")

</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            @if (Request.IsAuthenticated)
            {
                <div class="col-md-3 left_col">
                    <div class="left_col scroll-view">

                        <div class="navbar nav_title" style="border: 0;">
                            <a href="@Url.Action("Index", "Home")" class="site_title"><i class="fa fa-university"></i> <span>BANK ERP</span></a>
                        </div>
                        <div class="clearfix"></div>

                        <!-- menu prile quick info -->

                        <div class="clearfix"></div>
                        <!-- /menu prile quick info -->

                        <br />

                        <!-- sidebar menu -->
                        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

                            <div class="menu_section">
                                <ul class="nav side-menu">
                                    <li>
                                        <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home </a>
                                    </li>

                                    <li>
                                        <a><i class="fa fa-money"></i> Manage Accounts <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu" style="display: none">
                                            <li>
                                                <a href="@Url.Action("Index", "AccountBank")">List All Accounts</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Create", "AccountBank")">New Current Accounts</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("CreateSaving", "AccountBank")">New Saving Accounts</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("CreateBlocked", "AccountBank")">New Blocked Accounts</a>
                                            </li>
                                        </ul>
                                    </li>

                                    <li>
                                        <a href="@Url.Action("Index", "Transaction")"><i class="fa fa-exchange"></i> Manage Transactions </a>
                                    </li>

                                    <li>
                                        <a href="@Url.Action("Index", "Loan")"><i class="fa fa-usd"></i> Manage Loans </a>
                                    </li>

                                    <li>
                                        <a><i class="fa fa-list-alt"></i> Manage Invoices <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu" style="display: none">
                                            <li>
                                                <a href="@Url.Action("Index", "Invoice")">List All Invoices</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("InvIn", "Invoice")">Check Invoices In</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("InvOut", "Invoice")">Check Invoices Out</a>
                                            </li>
                                        </ul>
                                    </li>

                                    <li>
                                        <a href="@Url.Action("Index", "Broker")"><i class="fa fa-list-alt"></i> Manage Brokers </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "Share")"><i class="fa fa-list-alt"></i> Manage Shares </a>
                                    </li>
                                </ul>
                            </div>

                        </div>

                        <!-- /sidebar menu -->
                        <!-- /menu footer buttons -->
                        <div class="sidebar-footer hidden-small">
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" data-placement="top" title="Logout" style="width:100%;text-align:center;">
                                    <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                                </a>

                            }
                        </div>

                        <!-- /menu footer buttons -->
                    </div>
                </div>
            }
            <!-- top navigation -->
            <div class="top_nav">

                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <ul class="nav navbar-nav navbar-left">


                            @if (Request.IsAuthenticated)
                            {
                                <span class="nav toggle">
                                    <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                                </span>
                            }
                            <li>
                                @Html.ActionLink("About", "About", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Contact", "Contact", "Home")
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </nav>
                </div>

            </div>
            <!-- /top navigation -->

            <div class="container body-content">
                <div class="right_col" role="main">
                    @RenderBody()
                </div>

            </div>
        </div>


    </div>

    @RenderSection("scripts", required: false)
    @RenderSection("canvas1Script", required: false)
    @RenderSection("pieChartScript1", required: false)
    @RenderSection("pieChartScript2", required: false)
</body>
</html>
